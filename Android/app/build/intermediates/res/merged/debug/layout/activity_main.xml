<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.law.somamobile.MainActivity">

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txt_id" />

    <TextView
        android:layout_below="@id/txt_id"
        android:id="@+id/txt_name"
        android:text="txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="#f1b5c3d9"
        android:layout_below="@id/txt_name"
        android:id="@+id/img_profile"
        android:layout_width="50dp"
        android:layout_height="50dp" />


    <EditText
        android:padding="5dp"
        android:maxLines="2"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:background="#ffeb33"
        android:id="@+id/txt_space"
        android:layout_width="230dp"
        android:layout_height="45dp" />
    <EditText
        android:padding="5dp"

        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:background="#ffeb33"
        android:layout_below="@id/txt_space"
        android:id="@+id/edit_content"
        android:layout_width="230dp"
        android:layout_height="200dp">
        <requestFocus/>
    </EditText>

    <EditText
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:hint="JUST PUSH or INSERT URL"
        android:layout_below="@id/edit_content"
        android:textSize="15dp"
        android:background="#ffeb33"
        android:id="@+id/edit_url"
        android:layout_width="230dp"
        android:layout_height="30dp"
        />

    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@id/edit_url"
        android:id="@+id/btn_push"
        android:text="push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
